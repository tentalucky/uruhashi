<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.GameResultInputFragment">

    <data>

        <variable
            name="vm"
            type="mahoroba.uruhashi.presentation.GameResultInputViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhitish">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textHomeTeamName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="@{vm.homeTeamName}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/textRunsOfHomeTeam"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textVisitorTeamName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="@{vm.visitorTeamName}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/textRunsOfVisitorTeam"
            app:layout_constraintEnd_toEndOf="parent" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textRunsOfHomeTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textAlignment="center"
            android:text="@{vm.runsOfHome}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textHyphen"
            app:layout_constraintTop_toBottomOf="@id/textHomeTeamName"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textHyphen"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="-"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textRunsOfHomeTeam"
            app:layout_constraintBottom_toBottomOf="@id/textRunsOfHomeTeam"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textRunsOfVisitorTeam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textAlignment="center"
            android:text="@{vm.runsOfVisitor}"
            app:layout_constraintStart_toEndOf="@id/textHyphen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textVisitorTeamName"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CANCEL FINISHING"
            android:onClick="@{vm::cancelFinishingGame}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>