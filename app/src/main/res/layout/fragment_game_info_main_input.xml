<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.GameInfoMainInputFragment">

    <data>
        <variable name="vm" type="mahoroba.uruhashi.presentation.GameInfoInputViewModel" />
    </data>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textGameNameCaption"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:text="@string/game_info_game_name"
                app:layout_constraintBaseline_toBaselineOf="@id/textGameName"
                app:layout_constraintStart_toStartOf="parent"
            />

            <TextView
                android:id="@+id/textGameName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/game_info_game_name"
                android:text="@={vm.gameName}"
                android:enabled="@{vm.isLoaded}"
                android:onClick="@{vm::onGameNameClicked}"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/textGameNameCaption"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <TextView
                android:id="@+id/textGameDateCaption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/game_info_game_date"
                app:layout_constraintBaseline_toBaselineOf="@id/textGameDate"
                app:layout_constraintStart_toStartOf="@id/textGameNameCaption"
                app:layout_constraintEnd_toEndOf="@id/textGameNameCaption"
            />

            <TextView
                android:id="@+id/textGameDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:hint="@string/date_format"
                android:text="@{vm.gameDateText}"
                android:enabled="@{vm.isLoaded}"
                android:onClick="@{vm::onGameDateClicked}"
                app:layout_constraintTop_toBottomOf="@id/textGameName"
                app:layout_constraintStart_toStartOf="@id/textGameName"
                app:layout_constraintEnd_toEndOf="@id/textGameName"
            />

            <TextView
                android:id="@+id/textPlayBallAtCaption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/game_info_play_ball_at"
                app:layout_constraintBaseline_toBaselineOf="@id/textPlayBallAt"
                app:layout_constraintStart_toStartOf="@id/textGameNameCaption"
                app:layout_constraintEnd_toEndOf="@id/textGameNameCaption"
            />

            <TextView
                android:id="@+id/textPlayBallAt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:hint="@string/time_format"
                android:text="@{vm.playBallTimeText}"
                android:enabled="@{vm.isLoaded}"
                android:onClick="@{vm::onPlayBallTimeClicked}"
                app:layout_constraintTop_toBottomOf="@id/textGameDate"
                app:layout_constraintStart_toStartOf="@id/textGameName"
                app:layout_constraintEnd_toEndOf="@id/textGameName"
            />

            <TextView
                android:id="@+id/textStadiumCaption"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/game_info_stadium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/buttonSelectStadium"
                app:layout_constraintBottom_toBottomOf="@id/buttonSelectStadium"
            />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonSelectStadium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:text="@string/select"
                android:onClick="@{vm::onSelectStadiumClicked}"
                app:layout_constraintTop_toBottomOf="@id/textPlayBallAt"
                app:layout_constraintStart_toEndOf="@id/textStadiumCaption"
            />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonInputStadium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input"
                app:layout_constraintBaseline_toBaselineOf="@id/buttonSelectStadium"
                app:layout_constraintStart_toEndOf="@id/buttonSelectStadium"
            />

            <TextView
                android:id="@+id/textStadiumNameCaption"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/game_info_stadium_name"
                app:layout_constraintTop_toBottomOf="@id/buttonSelectStadium"
                app:layout_constraintStart_toStartOf="@id/textStadiumCaption"
            />

            <TextView
                android:id="@+id/textStadiumName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/game_info_stadium_name"
                android:text="@{vm.stadiumName}"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:layout_constraintBaseline_toBaselineOf="@id/textStadiumNameCaption"
                app:layout_constraintStart_toEndOf="@id/textStadiumNameCaption"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <TextView
                android:id="@+id/textStadiumAbbreviatedNameCaption"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="@string/game_info_stadium_abbreviated"
                android:layout_marginTop="@dimen/default_margin"
                app:layout_constraintStart_toStartOf="@id/textStadiumNameCaption"
                app:layout_constraintTop_toBottomOf="@id/textStadiumNameCaption"
            />

            <TextView
                android:id="@+id/textStadiumAbbreviatedName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/game_info_stadium_abbreviated"
                android:text="@{vm.stadiumAbbreviatedName}"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:layout_constraintBaseline_toBaselineOf="@id/textStadiumAbbreviatedNameCaption"
                app:layout_constraintStart_toEndOf="@id/textStadiumAbbreviatedNameCaption"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <TextView
                android:id="@+id/textHomeTeamCaption"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/game_info_home_team"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/buttonSelectHomeTeam"
                app:layout_constraintBottom_toBottomOf="@id/buttonSelectHomeTeam"
            />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonSelectHomeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:text="@string/select"
                android:onClick="@{vm::onSelectHomeTeamClicked}"
                app:layout_constraintTop_toBottomOf="@id/textStadiumAbbreviatedNameCaption"
                app:layout_constraintStart_toEndOf="@id/textHomeTeamCaption"
            />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonInputHomeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input"
                app:layout_constraintBaseline_toBaselineOf="@id/buttonSelectHomeTeam"
                app:layout_constraintStart_toEndOf="@id/buttonSelectHomeTeam"
            />

            <TextView
                android:id="@+id/textHomeTeamNameCaption"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/game_info_team_name"
                app:layout_constraintTop_toBottomOf="@id/buttonSelectHomeTeam"
                app:layout_constraintStart_toStartOf="@id/textHomeTeamCaption"
            />

            <TextView
                android:id="@+id/textHomeTeamName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/game_info_team_name"
                android:text="@{vm.homeTeamName}"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:layout_constraintBaseline_toBaselineOf="@id/textHomeTeamNameCaption"
                app:layout_constraintStart_toEndOf="@id/textHomeTeamNameCaption"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <TextView
                android:id="@+id/textHomeTeamAbbreviatedNameCaption"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/game_info_team_abbreviated"
                app:layout_constraintTop_toBottomOf="@id/textHomeTeamNameCaption"
                app:layout_constraintStart_toStartOf="@id/textHomeTeamCaption"
            />

            <TextView
                android:id="@+id/textHomeTeamAbbreviatedName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/game_info_team_abbreviated"
                android:text="@{vm.homeTeamAbbreviatedName}"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:layout_constraintBaseline_toBaselineOf="@id/textHomeTeamAbbreviatedNameCaption"
                app:layout_constraintStart_toEndOf="@id/textHomeTeamNameCaption"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <android.support.v7.widget.AppCompatButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/buttonSetHomeStartingLineup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:text="@string/game_info_starting_lineup"
                android:onClick="@{vm::onSetHomeTeamStartingLineupClicked}"
                app:layout_constraintTop_toBottomOf="@id/textHomeTeamAbbreviatedNameCaption"
                app:layout_constraintStart_toStartOf="@id/textHomeTeamCaption"
            />

            <TextView
                android:id="@+id/textVisitorTeamCaption"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/game_info_visitor_team"
                app:layout_constraintStart_toStartOf="@id/textGameNameCaption"
                app:layout_constraintBaseline_toBaselineOf="@id/buttonSelectVisitorTeam"
            />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonSelectVisitorTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:text="@string/select"
                android:onClick="@{vm::onSelectVisitorTeamClicked}"
                app:layout_constraintTop_toBottomOf="@id/buttonSetHomeStartingLineup"
                app:layout_constraintStart_toEndOf="@id/textVisitorTeamCaption"
            />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonInputVisitorTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/input"
                app:layout_constraintBaseline_toBaselineOf="@id/buttonSelectVisitorTeam"
                app:layout_constraintStart_toEndOf="@id/buttonSelectVisitorTeam"
            />

            <TextView
                android:id="@+id/textVisitorTeamNameCaption"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/game_info_team_name"
                app:layout_constraintTop_toBottomOf="@id/buttonSelectVisitorTeam"
                app:layout_constraintStart_toStartOf="@id/textVisitorTeamCaption"
            />

            <TextView
                android:id="@+id/textVisitorTeamName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/game_info_team_name"
                android:text="@{vm.visitorTeamName}"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:layout_constraintBaseline_toBaselineOf="@id/textVisitorTeamNameCaption"
                app:layout_constraintStart_toEndOf="@id/textVisitorTeamNameCaption"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <TextView
                android:id="@+id/textVisitorTeamAbbreviatedNameCaption"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/game_info_team_abbreviated"
                app:layout_constraintTop_toBottomOf="@id/textVisitorTeamNameCaption"
                app:layout_constraintStart_toStartOf="@id/textVisitorTeamCaption"
            />

            <TextView
                android:id="@+id/textVisitorTeamAbbreviatedName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/game_info_team_abbreviated"
                android:text="@{vm.visitorTeamAbbreviatedName}"
                android:layout_marginStart="@dimen/default_margin"
                android:layout_marginEnd="@dimen/default_margin"
                app:layout_constraintBaseline_toBaselineOf="@id/textVisitorTeamAbbreviatedNameCaption"
                app:layout_constraintStart_toEndOf="@id/textVisitorTeamNameCaption"
                app:layout_constraintEnd_toEndOf="parent"
            />

            <android.support.v7.widget.AppCompatButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/buttonSetVisitorStartingLineup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginStart="@dimen/default_margin"
                android:text="@string/game_info_starting_lineup"
                android:onClick="@{vm::onSetVisitorTeamStartingLineupClicked}"
                app:layout_constraintTop_toBottomOf="@id/textVisitorTeamAbbreviatedNameCaption"
                app:layout_constraintStart_toStartOf="@id/textVisitorTeamCaption"
            />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:text="記録"
                android:onClick="@{vm::commitCommand}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonSetVisitorStartingLineup"
            />

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:text="PLAY BALL"
                android:onClick="@{vm::goToBoxScoreInputCommand}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buttonSetVisitorStartingLineup"
            />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</layout>
