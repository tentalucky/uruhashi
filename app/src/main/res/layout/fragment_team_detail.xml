<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="vm" type="mahoroba.uruhashi.presentation.TeamListViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:text="@string/edit"
            android:onClick="@{vm::editCommand}"
            android:enabled="@{vm.isSelected}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        />

        <TextView
            android:id="@+id/textIdCaption"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonEdit"
        />

        <TextView
            android:id="@+id/textIdValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.selectedTeamId}"
            app:layout_constraintBaseline_toBaselineOf="@id/textIdCaption"
            app:layout_constraintStart_toEndOf="@id/textIdCaption"
        />

        <TextView
            android:id="@+id/textNameCaption"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/team_name"
            android:layout_marginTop="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="@id/textIdCaption"
            app:layout_constraintTop_toBottomOf="@id/textIdCaption"
        />

        <TextView
            android:id="@+id/textNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.selectedTeamName}"
            app:layout_constraintBaseline_toBaselineOf="@id/textNameCaption"
            app:layout_constraintStart_toEndOf="@id/textNameCaption"
        />

        <TextView
            android:id="@+id/textAbbreviatedNameCaption"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/team_abbreviation"
            android:layout_marginTop="@dimen/default_margin"
            app:layout_constraintStart_toStartOf="@id/textNameCaption"
            app:layout_constraintTop_toBottomOf="@id/textNameCaption"
        />

        <TextView
            android:id="@+id/textAbbreviatedNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{vm.selectedTeamAbbreviatedName}"
            app:layout_constraintBaseline_toBaselineOf="@id/textAbbreviatedNameCaption"
            app:layout_constraintStart_toEndOf="@id/textAbbreviatedNameCaption"
        />

        <TextView
            android:id="@+id/textPriorityCaption"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/team_priority"
            app:layout_constraintStart_toStartOf="@id/textAbbreviatedNameCaption"
            app:layout_constraintTop_toTopOf="@id/ratePriorityValue"
            app:layout_constraintBottom_toBottomOf="@id/ratePriorityValue"
        />

        <RatingBar
            style="?android:attr/ratingBarStyleIndicator"
            android:id="@+id/ratePriorityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:numStars="5"
            android:rating="@{vm.selectedTeamPriority}"
            android:stepSize="1"
            android:isIndicator="true"
            app:layout_constraintTop_toBottomOf="@id/textAbbreviatedNameValue"
            app:layout_constraintStart_toStartOf="@id/textNameValue"
        />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/default_margin"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@id/ratePriorityValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonEditMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_member"
            android:onClick="@{vm::editMemberCommand}"
            android:enabled="@{vm.isSelected}"
            app:layout_constraintStart_toStartOf="@id/textAbbreviatedNameCaption"
            app:layout_constraintTop_toBottomOf="@id/divider"
        />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/memberListView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/buttonEditMember"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />

    </android.support.constraint.ConstraintLayout>

</layout>

