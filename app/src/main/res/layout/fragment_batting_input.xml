<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.BattingInputFragment">

    <data>
        <variable name="vm" type="mahoroba.uruhashi.presentation.BattingInputViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <mahoroba.uruhashi.presentation.customView.BattedBallDirectionView
            android:id="@+id/battedBallDirectionView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:direction="@={vm.direction}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/battedBallTypeView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />

        <mahoroba.uruhashi.presentation.customView.BattedBallTypeSelectingView
            android:id="@+id/battedBallTypeView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:selected_value="@={vm.battedBallType}"
            app:layout_constraintBottom_toTopOf="@id/battedBallStrengthView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />

        <mahoroba.uruhashi.presentation.customView.BattedBallStrengthSelectingView
            android:id="@+id/battedBallStrengthView"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:selected_value="@={vm.strength}"
            app:layout_constraintBottom_toTopOf="@id/battingResultView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
        />

        <mahoroba.uruhashi.presentation.customView.BattingResultSelectingView
            android:id="@+id/battingResultView"
            android:layout_width="0dp"
            android:layout_height="112dp"
            app:selected_value="@={vm.result}"
            app:layout_constraintBottom_toTopOf="@id/commitButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textDistance"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@{Integer.toString(vm.distance) + 'M'}"
            android:onClick="@{vm::inputDistanceCommand}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        />

        <mahoroba.uruhashi.presentation.customView.BattingOptionSelectingView
            android:id="@+id/battingOptionView"
            android:layout_width="120dp"
            android:layout_height="48dp"
            app:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/textDistance"
        />

        <Button
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="@{vm::backCommand}"
            android:text="@string/caption_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/battingOptionView"
            app:layout_constraintEnd_toStartOf="@id/commitButton"
        />
        <Button
            android:id="@+id/commitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="@{vm::commitCommand}"
            android:enabled="@{vm.inputIsValid}"
            android:text="@string/caption_commit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/backButton"
            app:layout_constraintEnd_toEndOf="parent"
        />
    </android.support.constraint.ConstraintLayout>

</layout>
