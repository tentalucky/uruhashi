<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="mahoroba.uruhashi">
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".presentation.ScoreKeepingActivity">
        </activity>
        <activity android:name=".presentation.GameListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.StadiumListActivity">
        </activity>
        <activity
            android:name=".presentation.StadiumEditActivity"
            android:parentActivityName=".presentation.StadiumListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".presentation.StadiumListActivity" />
        </activity>
        <activity android:name=".presentation.TeamListActivity">
        </activity>
        <activity
            android:name=".presentation.TeamEditActivity"
            android:parentActivityName=".presentation.TeamListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".presentation.TeamListActivity" />
        </activity>
        <activity android:name=".presentation.PlayerListActivity">
        </activity>
        <activity
            android:name=".presentation.PlayerEditActivity"
            android:parentActivityName=".presentation.PlayerListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".presentation.PlayerListActivity" />
        </activity>
        <activity android:name=".presentation.TeamMemberEditActivity">
        </activity>
    </application>

</manifest>